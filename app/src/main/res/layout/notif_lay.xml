<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp"
    android:background="@color/nicered1"
    android:orientation="vertical"
    android:visibility="visible">


    <LinearLayout
        android:id="@+id/minimalist_notif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/minimalist_notif_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="TextView"
            android:textSize="30sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_n_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:id="@+id/notif_ssid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SSID"
            android:textColor="@color/webgray"
            android:textStyle="bold"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_n_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/notif_add"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Address"
            android:textAlignment="textStart"
            android:textColor="@color/webgray" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay_n_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/notif_add_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="gps info"
            android:textAlignment="textStart"
            android:textColor="@color/webgray" />
    </LinearLayout>

</LinearLayout>